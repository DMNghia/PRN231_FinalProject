    <title>Đăng ký</title>
</head>
<style>
    body {
        background-image: url('assets/img/background-signup.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        height: 100vh;
        margin: 0;
    }
</style>
<body>
    <div id="notification-area"></div>
    <!----------------------- Main Container -------------------------->
    <div class="container d-flex justify-content-center align-items-center min-vh-100">
        <!----------------------- Login Container -------------------------->
        <div class="row border rounded-5 p-3 bg-white shadow box-area">
            <!--------------------------- Left Box ----------------------------->
            <div class="col-md-6 rounded-4 d-flex justify-content-center align-items-center flex-column left-box" style="background: #5fcf80;">
                <div class="featured-image mb-3">
                    <img src="assets/img/1.png" class="img-fluid" style="width: 250px;">
                </div>
                <p class="text-white fs-2" style="font-family: 'Courier New', Courier, monospace; font-weight: 600;">Xác thực</p>
                <small class="text-white text-wrap text-center" style="width: 17rem;font-family: 'Courier New', Courier, monospace;">Nền tảng chia sẻ và học miễn phí.</small>
            </div>
            <!-------------------- ------ Right Box ---------------------------->

            <div class="col-md-6 right-box">
                <div class="row align-items-center">
                    <div class="header-text mb-4">
                        <h2>Tạo tài khoản mới</h2>
                        <p>Chúng tôi rất vui khi bạn gia nhập với chúng tôi!</p>
                    </div>
                    <form method="post">
                        <div class="input-group mb-3">
                            <input asp-for="SignUpRequest.FullName" id="nameInput" type="text" required class="form-control form-control-lg bg-light fs-6" placeholder="Nhập tên của bạn">
                        </div>
                        <div class="input-group mb-3">
                            <input asp-for="SignUpRequest.Email" id="emailInput" type="email" required class="form-control form-control-lg bg-light fs-6" placeholder="Email">
                        </div>
                        <div class="input-group mb-1">
                            <input asp-for="SignUpRequest.Password" id="passwordInput" type="password" required class="form-control form-control-lg bg-light fs-6" placeholder="Mật khẩu">
                        </div>
                        <div class="input-group mb-5 d-flex justify-content-between">
                            <div class="form-check">
                                <label class="form-check-label text-secondary"><span>Tôi là</span></label><br />

                                <label for="studentRole" class="form-check-label text-secondary"><input asp-for="SignUpRequest.Role" type="radio" class="form-check-input" checked="checked" value="STUDENT" id="studentRole"><small>Học sinh</small></label><br />

                                <label for="teacherRole" class="form-check-label text-secondary"><input asp-for="SignUpRequest.Role" type="radio" class="form-check-input" value="TEACHER" id="teacherRole"><small>Giáo viên</small></label>
                            </div>
                        </div>
                        <div class="input-group mb-3">
                            <button id="btnSignUp" type="submit" class="btn btn-lg btn-primary w-100 fs-6"> Đăng ký</button>
                        </div>
                    </form>
                    <div class="row">
                        <small>Tôi đã có tài khoản! <a href="dang-nhap">Đăng nhập</a></small>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="./assets/js/notification.js" defer></script>
    @if (errorMessage != null)
    {
        <script>
            window.onload = () => {
                notify('danger', '@errorMessage');
            };
        </script>
    }
    @if (successMessage != null)
    {
        <script>
            window.onload = () => {
                notify('success', '@successMessage');
            };
        </script>
    }
